<div class="container my-5">
  <div class="jumbotron">
    <h1>INICIAR SESIÓN</h1>
    <br />
    <form
      class="form d-flex flex-column"
      action="/api/login"
      method="post"
      role="form"
      autocomplete="off"
      style="gap: 20px;"
    >
      <div class="form-group">
        <input
          id="username"
          name="username"
          placeholder="Email"
          class="form-control"
          type="text"
          required
        />
      </div>

      <div class="form-group">
        <input
          id="password"
          name="password"
          placeholder="Contraseña"
          class="form-control"
          type="password"
          required
        />
      </div>

      <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Iniciar" />
      </div>
    </form>
    <hr />
    <div class="text-left">
      <button
        class="btn btn-success my-3"
        onclick="location.href = '/api/register'"
      >
        Registrarse
      </button>
    </div>
  </div>
</div>