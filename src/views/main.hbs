<div class="container text-center my-3">
  
  <div class="header d-flex justify-content-between">
    <button onclick="location.href='/api/main'"><h1>LOGO</h1></button>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <img src={{data.imgUrl}} alt="avatar" />
      </button>
      <ul class="dropdown-menu">
        <li>
          <button
            class="dropdown-item"
            onclick="location.href='/api/profile'"
          >
            Perfil
          </button>
        </li>
        <li>
          <button
            class="dropdown-item"
            onclick="location.href='/api/cart'"
          >
            Carrito
          </button>
        </li>
        <li>
          <button
            class="dropdown-item"
            onclick="location.href='/api/logout'"
          >
            Salir
          </button>
        </li>
      </ul>
    </div>
  </div>
    
  <div class="container mt-5">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Precio</th>
          <th scope="col">Im√°gen</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="productsList">
        {{#each productData}}
          <tr>
            <td>{{title}}</td>
            <td>{{price}}</td>
            <td><img class="img-thumbnail" style="height: 75px; width: 75px;" src="{{thumbnail}}" /></td>
            <td>
              <button class="btn btn-success btn-sm my-3" id="addToCart{{_id}}" onclick="addToCartListener(this.id)" data-productid={{_id}} data-userid={{../data._id}}>Agregar al carrito</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>