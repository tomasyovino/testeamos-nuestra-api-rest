  <div class="container text-center my-3">
    <div class="header d-flex justify-content-between">
        <button onclick="location.href='/api/main'"><h1>LOGO</h1></button>
        <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src={{userData.imgUrl}} alt="avatar" />
        </button>
        <ul class="dropdown-menu">
            <li>
            <button
                class="dropdown-item"
                onclick="location.href='/api/profile'"
            >
                Perfil
            </button>
            </li>
            <li>
            <button
                class="dropdown-item"
                onclick="location.href='/api/cart'"
            >
                Carrito
            </button>
            </li>
            <li>
            <button
                class="dropdown-item"
                onclick="location.href='/api/logout'"
            >
                Salir
            </button>
            </li>
        </ul>
        </div>
    </div>

    <div class="container mt-5">
        <h1>Carrito</h1>
        <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Im√°gen</th>
            <th scope="col">Cantidad</th>
            <th></th>
            </tr>
        </thead>
        <tbody class="cartList">
            {{#each data}}
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td><img class="img-thumbnail" style="height: 75px; width: 75px;" src="{{thumbnail}}" /></td>
                <td>{{quantity}}</td>
                <td><button class="btn btn-danger btn-sm my-3" id="deleteBtn{{_id}}" onclick="deleteProductFromCartListener(this.id)" data-productid={{_id}} data-userid={{../userData._id}}>X</button></td>
            </tr>
            {{/each}}
        </tbody>
        </table>
        <div class="d-flex justify-content-end" style="width: 100%;">
            <button class="btn btn-success btn-sm my-3" id="buyBtn" onclick="cartBuyListener(this.id)">Comprar</button>
        </div>
    </div>
</div>